@using CheeseMVC.ViewModels
@model ViewMenuViewModel
@{
    ViewBag.Title = Model.Menu.Name;
}
 
<ul>
    @foreach (var cheeseMenu in Model.Items)
    {
        <li>
            @cheeseMenu.Cheese.Name
        </li>

    }
</ul>

@if (Model.Items.Count == 0)
{
    <p><i>No Menu Items Added Yet!</i></p>

}

<p><a asp-controller="Menu" asp-action="AddItem" asp-route-id="@Model.Menu.ID">Add Item</a></p>